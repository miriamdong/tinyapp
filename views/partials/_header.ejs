<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (userId && (userId != undefined)) { %>
    <form class="form-inline" action="/logout" method="POST" style="position:relative; display: inline-block;">
      <div class="form-group mb-2">
        <p class="card-header">Logged in as: <%= email %></p>
        <button type="submit" class="btn btn-primary">Logout
    </form>
    <% } else  { %>
    <form class="form-inline" action="/login" method="GET" style="position:relative; display: inline-block;">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Login
        </button>
    </form>
    <form class="form-inline" action="/register" method="GET" style="position:relative; display: inline-block;">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Register
        </button>
    </form>

    <% } %>
    </div>


  </nav>
</header>